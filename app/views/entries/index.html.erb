<h1>All Entries</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Entry</th>
  </tr>

  <% @entries.each do |entry| %>
    <tr>
      <td><%= entry.date %></td>
      <td><%= entry.text %></td>
      <td><%= link_to 'Show', entry_path(entry) %></td>
      <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
      <td><%= link_to 'Delete', entry_path(entry),
              method: :delete,
              data: { confirm: 'Are you sure?'}  %></td>
    </tr>
  <% end %>
</table>