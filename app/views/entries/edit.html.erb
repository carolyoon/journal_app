<h1>Edit Entry</h1>

<%= form_with model:@entry do |form| %>
  
  <% if @entry.errors.any? %>
    <div id = "error_explanation">
      <h2>
        <%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:
      </h2>
      <ul>
        <% @errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :date %><br>
    <%= form.text_field :date %>
  </p>

  <p>
    <%= form.label :entry %><br>
    <%= form.text_area :entry %>
  </p>
  
  <p><%= form.submit %></p>

<% end %>
